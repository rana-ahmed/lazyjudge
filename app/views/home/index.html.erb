<div class="container" style="margin-top:111px;">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="color-background">
                <h3 style="font-size:46px;padding-top:24px;text-align:center;margin-top:0px;
  margin-bottom:-15px;">
                  HELLO</h3>
                <br>

                <p style="font-size:19px;text-align:center;">Sign in to start your fight</p>
                <br>
            </div>

            <%= simple_form_for(:user, url: sessions_path, method: :post, html: { style: "background:white;margin-top:17px" }) do |f| %>
                <div class="form-group">
                    <label for="exampleInputEmail1">User name</label>
                    <%= f.input_field :user_name, class: "form-control", placeholder: "User name" %>
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <%= f.input_field :password, class: "form-control", placeholder: "Password" %>
                </div>
                <%= f.button :submit, "__Login__", class:"btn btn-primary" %>
            <% end %>
        </div>
    </div>
</div>
