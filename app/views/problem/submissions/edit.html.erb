<div class="container" style="margin-top: 97px;">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default panel-problem">
        <div class="panel-body" style="position: relative;">
          <div class="h4"><strong>Problem: </strong><%= @submission.problem.title %></div>
          <div class="h4"><strong>Team: </strong><%= @submission.user.user_name %></div>
          <div class="h4"><strong>Result: </strong></div>
          <%= simple_form_for(@submission, html: {class: "form-inline"}) do |f| %>
            <%= f.input_field :result, collection: Submission.results.keys.to_a, selected: @submission.result, class: "form-control" %>
            <%= f.button :submit, "Rejudge", class: "btn btn-success" %>
          <% end %>
          <div class="h4"><strong>Code:</strong></div><small><button class="btn" data-clipboard-target="#code">copy</button></small>
          <pre id="code">
            <%= @submission.code %>
          </pre>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  new Clipboard('.btn');
</script>
